<Window x:Class="Color_Collector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

	<Grid>
		<TextBlock HorizontalAlignment="Left" Height="75" Margin="223,47,0,0" TextWrapping="Wrap" Text="Color Collector" VerticalAlignment="Top" Width="310" TextAlignment="Center" FontSize="36"/>
		<Rectangle Name="ColorDisplay" Width="144" Height="113" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,47,0,0"/>
		<TextBox Name="ColorInfo" VerticalAlignment="Top" Margin="49,165,607,0" Height="30" IsReadOnly="True"/>
		<TextBlock Text="Criar nova Paleta:" Margin="223,141,177,0" VerticalAlignment="Top" FontSize="14"/>
		<TextBox Name="PaletteName" Height="30" Margin="223,165,267,0" VerticalAlignment="Top"/>
		<Button Content="Salvar Paleta" Height="30" Margin="540,165,155,0" VerticalAlignment="Top" Click="SavePalette"/>
		<Label x:Name="PaletteNameLabel" Content="Nome da Paleta" FontSize="16" Margin="53,249,625,156"/>
		<ListBox x:Name="ColorPalette" Margin="53,283,53,27">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal" Margin="5">
						<TextBlock Text="{Binding Description}" VerticalAlignment="Center" Margin="5,0"/>
						<Rectangle Width="20" Height="20" Fill="{Binding Color}" VerticalAlignment="Center"/>
						<TextBlock Text="{Binding HexCode}" VerticalAlignment="Center" Margin="5,0"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Window>
